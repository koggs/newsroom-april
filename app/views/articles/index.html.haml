.wrapper 
  %h1= t('site_info.site_title')
  
  #category-bar
    = link_to t('categories.all_categories'), root_path
    - @categories.each do |category|
      |
      = link_to category.name, category_path(category)
  %hr

  .articles.bg-grey
    .center
      #article-list
        - @articles.each do |article|
          %h3= link_to article.headline, article_path(article)
