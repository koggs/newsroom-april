%h3= @article.headline
%br
%p= @article.content

%br
%button.bg-grey-dark.hover:bg-grey.text-white.font-bold.py-2.px-4.border.border-black.rounded
  = link_to t('article.edit_link'), edit_article_path(@article), { class: 'text-black hover:text-white' } if policy(@article).edit?
%button.bg-grey-dark.hover:bg-grey.text-white.font-bold.py-2.px-4.border.border-black.rounded
  = link_to t('article.delete_link'), article_path(@article), { method: :delete, class: 'text-black hover:text-white' } if policy(@article).destroy?
%br
%br
- @comments.each do |comment|
  %p= comment.content

= form_with scope: :comment, url: article_comments_path(@article), local: true do |form|
  %br
  %br
  = form.label t('comment.comment_content')
  %br
  = form.text_area :content, placeholder: t('comment.comment_content')
  %br
  %button.bg-grey-dark.hover:bg-grey.text-white.font-bold.py-2.px-4.border.border-black.rounded
    = form.submit t('comment.submit'), { class: 'text-black hover:text-white' }

%br
%button.bg-grey-dark.hover:bg-grey.text-white.font-bold.py-2.px-4.border.border-black.rounded
  = link_to t('article.back_link'), root_path, { class: 'text-black hover:text-white' }
